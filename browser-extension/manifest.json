{
  "manifest_version": 3,
  "name": "Moodle MCP Session Helper",
  "version": "2.0.1",
  "description": "Two-way bridge between Moodle and MCP server - enables AI to browse Moodle",
  "permissions": [
    "cookies",
    "activeTab",
    "tabs",
    "storage",
    "clipboardWrite",
    "scripting"
  ],
  "host_permissions": [
    "https://moodle.louisiana.edu/*",
    "https://*.moodle.louisiana.edu/*",
    "http://moodle.louisiana.edu/*",
    "http://*.moodle.louisiana.edu/*",
    "*://*.louisiana.edu/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.moodle.louisiana.edu/*", "*://moodle.louisiana.edu/*", "*://*.louisiana.edu/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
