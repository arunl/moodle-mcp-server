{
  "manifest_version": 3,
  "name": "Moodle MCP Bridge",
  "version": "2.2.0",
  "description": "Connect your Moodle session to AI assistants via the Moodle MCP hosted service",
  "permissions": [
    "storage",
    "cookies",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:8080/*",
    "*://*.moodle.org/*",
    "*://*.moodle.com/*",
    "*://*.moodle.louisiana.edu/*",
    "*://moodle.louisiana.edu/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.moodle.org/*",
        "*://*.moodle.com/*",
        "*://*.moodle.edu/*",
        "*://*.moodle.louisiana.edu/*",
        "*://moodle.louisiana.edu/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Moodle MCP Bridge"
  },
  "icons": {
    "48": "icon.svg",
    "128": "icon.svg"
  }
}
